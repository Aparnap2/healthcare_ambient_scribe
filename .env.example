# Healthcare Ambient Scribe - Environment Variables
# Copy this file to .env and fill in your values

# Database (using existing fraud-db container)
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/ambient_scribe"

# MinIO / S3 (for audio file storage)
S3_ENDPOINT="http://localhost:9000"
S3_ACCESS_KEY="admin"
S3_SECRET_KEY="password"
S3_BUCKET="audio-files"

# Ollama (Local LLM - already running)
OLLAMA_BASE_URL="http://localhost:11434"
OLLAMA_MODEL="qwen2.5-coder:3b"

# Kokoro TTS (cpu_kokoro-tts container)
TTS_BASE_URL="http://localhost:8888"

# HAPI FHIR Server (run locally or use external)
FHIR_BASE_URL="http://localhost:8080/fhir"

# Whisper Transcription (faster-whisper-server)
WHISPER_BASE_URL="http://localhost:9001"

# Application
CLINICIAN_ID="dr-house"  # Demo clinician
NODE_ENV="development"
